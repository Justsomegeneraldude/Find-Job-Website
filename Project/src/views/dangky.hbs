          <label for="company">Tên doanh nghiệp</label>
          <input name="tendoanhnghiep" type="text" class="form-control py-2 forTD" id="company" disable>
          <div class="invalid-feedback">Vui lòng nhập tên doanh nghiệp.</div>
        </div>
        <div class="form-group">
          <label for="address">Địa chỉ</label>
          <input name="diachi" type="text" class="form-control py-2 forTD" id="address" disable>
          <div class="invalid-feedback">Vui lòng nhập địa chỉ.</div>
        </div>
        <div class="form-group">
          <label for="website">Website</label>
          <input name="website" type="text" class="form-control py-2 forTD" id="website" disable>
          <div class="invalid-feedback">Vui lòng nhập website.</div>
        </div>
        <div class="offset-sm-4">
          <button type="submit" name='dangky' class="mx-auto">Đăng Kí</button>
        </div>
        <div class="">
          <div class="signup_link">Đã có tài khoản? <a href="./dangnhap">Đăng nhập</a>
          </div>

        </div>
      </form>
    </div>
  </div>
