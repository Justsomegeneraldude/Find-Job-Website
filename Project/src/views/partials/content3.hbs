{{#if message}}
<div id="handle-error" class="awn-toast-container">
    <div class="awn-toast-wrapper"><b class="awn-toast-label">THÔNG BÁO</b>
      <div class="awn-toast-content">{{message}}</div>
    </div>
</div>
{{/if}}

{{#if success}}
<div id="handle-error" class="awn-toast-container1">
    <div class="awn-toast-wrapper1"><b class="awn-toast-label1">THÔNG BÁO</b>
      <div class="awn-toast-content1">{{success}}</div>
    </div>
</div>
{{/if}}
